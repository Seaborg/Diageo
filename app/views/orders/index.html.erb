  </tr> 
 
<% @orders.each do |order| %>
  <tr> 
	<td><%= order.id %></td>     
	<td><%= order.name %></td> 
    <td><%= order.address %></td> 
    <td><%= order.email %></td> 
    <td><%= order.promotext %></td>
 
    <td><%= link_to 'Show', order %></td> 
    <td><%= link_to 'Edit', edit_order_path(order) %></td> 
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?',
              :method => :delete %></td> 
  </tr> 
<% end %>
</table> 
 
