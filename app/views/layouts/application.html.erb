<!DOCTYPE html> 
<html> 
<head> 
  <title>Pragprog Books Online Store</title> 
<!-- START:stylesheet --> 
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "store", :media => "all" %>
<!-- END:stylesheet --> 
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head> 
<body id="store"> 
  <div id="banner"> 
    <%= @page_title || "Oxwood.ie - Diageo - Ordering System" %>
  </div> 
  <div id="columns"> 
    <div id="side"> 
      <!-- START:hidden_div --> 
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
        <% end %>
      <% end %>
    <!-- END:hidden_div --> 
 
      <br>
	<%= link_to("Home", { :controller => "store", :action => :index }) %><br>
    <a href="http://www..../faq">Questions</a><br /> 
    <a href="http://www..../news">News</a><br />
 	<%= link_to 'Admin', admin_path   %><br />
	<%= mail_to("norman@oxwood.ie", "Contact")  %><br><br>

    <%= image_tag("logo.png") %>
<!-- START_HIGHLIGHT --> 
 
      <% if session[:user_id] %>
        <br /> 
        <%= link_to 'Orders',   orders_path   %><br /> 
        <%= link_to 'Products', products_path %><br /> 
        <%= link_to 'Users',    users_path    %><br /> 
		<%= link_to 'Printing',    line_items_path    %><br />
        <br /> 
        <%= button_to 'Logout', logout_path, :method => :delete   %>
      <% end %>
<!-- END_HIGHLIGHT --> 
    </div> 
    <div id="main"> 
      <%= yield %>
    </div> 
  </div> 
</body> 
</html>