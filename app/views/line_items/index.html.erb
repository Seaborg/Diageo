<h1>Order Listing</h1>

<table>
  <tr>
    <th>Order ID</th>
	<th>#SKU</th>
    <th>Product Name</th>
	<th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.order_id %></td>
	<td><%= line_item.product_id %></td>
    <td><%= line_item.cart_id %>
		<%= 
	@product = Product.where(:id => line_item.product_id)
	product_name = @product[0]
	product_name.title
		%>
	
	</td>
	<td><%= line_item.quantity %></td>	
	<td><%= link_to "Printable Version (PDF)", line_item_path(line_item, :format => 'pdf') %></td>
	
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

